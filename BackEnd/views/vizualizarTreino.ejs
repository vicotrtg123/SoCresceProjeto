<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <!-- Meta tags Obrigatórias -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    </head>
  <body>
    <!-- JavaScript (Opcional) -->
    <!-- jQuery primeiro, depois Popper.js, depois Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
        
          <table class = "table" >
            <thead>
              <tr>
                <th scope="col">Exercício(s)</th>
                <th scope="col">Repetições</th>
              </tr>
            </thead>
              <tbody>
                <tr>
                  <% exercicio.forEach(e => { %>
                    <tr><td><%= e.nome %></td>
                        <td><%= e.repeticoes %></td>
                    </tr>
                </tr>
                  <% }); %>
              </tbody>
              <thead class="thead-light">
                <tr>
                  <td class = "tdCamposImput" colspan="4">
                    <form action="/atualizarTreino" method="post">
                      <% treino.forEach(t => { %>
                        <input name="idtreino" value="<%= t.id %>" hidden> 
                      <div class="form-group">
                        <label for="exampleFormControlTextarea1">Nome do Treino</label>
                        <input name="nome" value=" <%= t.nome %> " class="form-control" id="exampleFormControlInput1">
                      </div>
                      <div class="form-group">
                        <label for="exampleFormControlTextarea1">Descrição</label>
                        <textarea name="descricao" class="form-control" id="exampleFormControlTextarea1" rows="3"> <%= t.descricao %> </textarea>
                      </div>
                  </td>
                </tr>
              </thead>
                      <% }); %>

              <thead class="thead-light">
                <tr>
                  <td class= "tdSalvarCancelar" colspan="4">
                    <div style="display: inline-flex;">
                      <div>
                        <button class="btn btn-outline-success" type="submit">Atualizar</button>
                      </div>
                      </form> 
                      <form  action="/excluirTreino" method="post">
                      <% treino.forEach(t => { %>
                      <input name="idtreino" value="<%= t.id %>" hidden>
                      <div style="width: 5px;"></div>
                      <div>
                        <button type="submit" class="btn btn-outline-danger">Excluir</button>
                      </div>
                      <% }); %>
                      </form>
                    </div>
                  </td>
                </tr>
              </thead>
          </table>
        </form>
</body>
</html>