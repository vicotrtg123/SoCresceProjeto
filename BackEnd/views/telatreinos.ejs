<!DOCTYPE html>
<html lang="pt-br" id="id-html">

<head>
  <!-- Meta tags Obrigatórias -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
  <link rel="stylesheet" type="text/css" href="css/telatreino.css" media="screen" />
</head>

<body id="body">

<!-- Modal Visualizar Treino-->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content" id="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Vizualição Treino</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">Categoria</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Vídeo</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <th scope="row">Peitoral</th>
                    <td>Supino reto</td>
                    <td><button>Assistir</button></td>
                  </tr>
                  <tr>
                    <th scope="row">Biceps</th>
                    <td>Rosca direta</td>
                    <td><button>Assistir</button></td>
                  </tr>
                  <tr>
                    <th scope="row">Perna</th>
                    <td>Leg 45</td>
                    <td><button>Assistir</button></td>
                  </tr>
                </tbody>
              </table>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">OK</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal Avaliar Treino-->
<div class="modal fade" id="exampleModal2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content" id="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Avaliação</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <label>Escreva um comentário!</label>
        <br>
        <textarea rows="2" cols="50" placeholder="Escreva seu comentário aqui!"></textarea>
        <br>
        <br>
        <label>De uma nota!</label>
        <br>
        <!-- O segundo valor estará selecionado inicialmente -->
        <select name="select">
          <option value="valor1">Nota 0</option>
          <option value="valor2">Nota 1</option>
          <option value="valor3">Nota 2</option>
          <option value="valor1">Nota 3</option>
          <option value="valor2">Nota 4</option>
          <option value="valor3">Nota 5</option>
          <option value="valor1">Nota 6</option>
          <option value="valor2">Nota 7</option>
          <option value="valor3">Nota 8</option>
          <option value="valor2">Nota 9</option>
          <option value="valor3">Nota 10</option>
        </select>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Salvar</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
      </div>
    </div>
  </div>
</div>

  <!-- JavaScript (Opcional) -->
  <!-- jQuery primeiro, depois Popper.js, depois Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
    integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
    crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"
    integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
    crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"
    integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
    crossorigin="anonymous"></script>

  <!-- Menus da tela-->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark bg-light">
    <a class="navbar-brand" href="/home"><img src="Imagens/soCresceLogotipo.png" class="img-fluid" alt="Responsive image"
        width="50"></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#textoNavbar"
      aria-controls="textoNavbar" aria-expanded="false" aria-label="Alterna navegação">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="textoNavbar">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/home">Home</a>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="/telaTreinos">Treinos<span class="sr-only">(Página atual)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/instrutores">Instrutores</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/">Sair</a>
        </li>
      </ul>
    </div>
  </nav>

  <!-- Menus da tela-->
  <div id="cards_treinos">
    <div class="container-fluid" id="container-fluid">
      <div class="row" id="linha">
        <div id="tela-esquerda">
          <div class="column" style="column-gap: 50px;">
            <div class="card" id="card-esquerda1">
              <div class="card-header text-center">
                <h>Novo Treino</h>
              </div>
              <div class="card-body text-center" id="card-body">
                <p>
                  <a href="/cadastrarNovoTreino" class="btn btn-primary btn-custom text-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" 
                      class="bi bi-plus-circle" viewBox="0 0 16 16"> 
                      <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                      <path
                        d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                    </svg>
                    Acessar
                    </svg>
                  </a>
                </p>
              </div>
              <div class="card-footer text-center">Crie seu treino de forma independente!</div>
            </div>
          </div>


          <div class="column" style="column-gap: 50px;">
            <div class="card" id="card-esquerda2">
              <div class="card-header text-center">
                <h>Treino Recomendado</h>
              </div>
              <div class="card-body text-center" id="card-body">
                <p>
                  <a href="#" class="btn btn-primary btn-custom text-center" id="btn-cards" data-toggle="modal" data-target="#exampleModal">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                      class="bi bi-plus-circle" viewBox="0 0 16 16">
                      <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                      <path
                        d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                    </svg>
                    Acessar
                    </svg>
                  </a>
                </p>
                <p>
                  <form method="post" action="/avaliarTGreino/id">
                  <a href="#" class="btn btn-primary btn-custom text-center" id="btn-cards" data-toggle="modal" data-target="#exampleModal2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                      class="bi bi-plus-circle" viewBox="0 0 16 16">
                      <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                      <path
                        d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                    </svg>
                    Avaliar
                    </svg>
                  </a>
                  <input type="hidden" name="idTGreinoi" value="]id">
                </form>
                </p>
              </div>
              <div class="card-footer text-center">Treino recomendado pela academia!</div>
            </div>
          </div>
        </div>
        <div id="tela-direita">
        

          <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">

              <% treinos.forEach(treino => { %>
              
              <div class="carousel-item active">
                <div class="column" style="column-gap: 50px;">
                  <div class="card" id="card-direita">
                    <div class="card-header text-center">
                      <h><%= treino.nome %></h>
                    </div>
                    <div class="card-body text-center" id="card-body">
                      <p>
                        <a href="#" class="btn btn-primary btn-custom text-center" id="btn-cards" data-toggle="modal" data-target="#exampleModal">
                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-plus-circle" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                            <path
                              d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                          </svg>
                          Acessar
                          </svg>
                        </a>
                      </p>
                      <p>
                        <a href="#" class="btn btn-primary btn-custom text-center" id="btn-cards" data-toggle="modal" data-target="#exampleModal2">
                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-plus-circle" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                            <path
                              d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                          </svg>
                          Avaliar
                          </svg>
                        </a>
                      </p>
                    </div>
                    <div class="card-footer text-center"><%= treino.descricao %></div>
                  </div>
                </div>
                <% }); %>
                
              <div class="carousel-item">
               
              </div>
            </div>
           <button class="carousel-control-prev" type="button" data-target="#carouselExampleControls" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-target="#carouselExampleControls" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </button>
          </div>

        </div>
      </div>
    </div>
  </div>
</body>

</html>